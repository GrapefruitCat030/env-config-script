{
    "multiCommand.commands": [
        // 这两条配置是用来解决 "重新打开终端后自动回滚到顶部"的问题
        {
            "command": "multiCommand.toggleTermClosed",
            "sequence": [
                "workbench.action.terminal.toggleTerminal",
                "workbench.action.terminal.focus",
                "workbench.action.terminal.scrollToBottom",
            ]
        },
        {
            "command": "multiCommand.toggleTermOpen",
            "sequence": [
                "workbench.action.terminal.toggleTerminal",
            ]
        }
    ],

    
    "explorer.confirmDelete": false,
    "leetcode.endpoint": "leetcode-cn",
    "leetcode.workspaceFolder": "d:\\MyCode\\myleetcode",
    "leetcode.defaultLanguage": "cpp",
    "leetcode.hint.configWebviewMarkdown": false,
    "leetcode.hint.commentDescription": false,
    "leetcode.hint.commandShortcut": false,
    
    
    "vim.easymotion": true,
    "vim.incsearch": true,
    "vim.useSystemClipboard": true,
    "vim.useCtrlKeys": true,
    "vim.hlsearch": true,
    "vim.leader": "<space>",
    "editor.lineNumbers":"relative",

    "vim.insertModeKeyBindings": [
        {
            "before": ["j", "j"],
            "after":  ["<Esc>"]
        },
        {
            "before": ["J", "J"],
            "after":  ["<Esc>"]
        }
    ],
    "vim.normalModeKeyBindingsNonRecursive": [
        // 到行首^映射为H，到行尾$映射为L
        {
            "before": ["H"],
            "after":  ["^"]
        },
        {
            "before": ["L"],
            "after":  ["$"]
        },
        {
            "before":   ["<C-n>"],
            "commands": [":nohl"]
        },
        {
            "before": ["J"],
            "after" : ["j"]
        },
        {
            "before":   ["K"],
            "commands": ["lineBreakInsert"],
            "silent": true
        },
        {
            "before":  ["z", "z"],
            "commands": ["editor.toggleFold"]
        }
    ],
    "vim.visualModeKeyBindingsNonRecursive": [
        {
            "before": ["H"],
            "after":  ["^"]
        },
        {
            "before": ["L"],
            "after":  ["$"]
        },
        {
            "before": ["<C-n>"],
            "after":  ["<Esc>"]
        },
        {
            "before": ["<Tab>"],
            "after":  [">", "g", "v"]
        },
        {
            "before": ["S-Tab"],
            "after":  ["<", "g", "v"]
        },
    ],
    "vim.handleKeys": {
        "<C-a>": false,
        "<C-b>": false,
        "<C-f>": false,
        "<C-j>": false,
        "<C-s>": false,
        "<M-Up>": false,
        "<M-Down>": false,
        "<M-Left>": false,
        "<M-Right>": false
    },


    "[python]": {
        "editor.formatOnType": true
    },
    "extensions.ignoreRecommendations": true,
    "workbench.colorTheme": "Atom One Light",
    "files.exclude": {
        "**/.shadow": true,
        "**/.vscode-server": true,
    },
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/*.code-search": true,
        "**/.shadow": true,
        "**/.vscode-server": true,
    },
    "editor.formatOnSave": false,
    "diffEditor.ignoreTrimWhitespace": false,
    "window.zoomLevel": 1,
    "editor.stickyScroll.enabled": true,
    //"C_Cpp.clang_format_style": " { BasedOnStyle: Chromium, IndentWidth: 4,  ColumnLimit: 0}",
    // "editor.language.brackets": [],
    // "C_Cpp.clang_format_fallbackStyle": "{ BasedOnStyle: Google, IndentWidth: 4 }",
    //"C_Cpp.clang_format_style": "{ BasedOnStyle: Google, IndentWidth: 4 }"
}